<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Text" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Text.Label">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="Text.Header">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Text.Input">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Text.Body1">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Body2">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Body3">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/blue</item>
    </style>

    <style name="MyDialog" parent="Theme.AppCompat.Dialog.MinWidth">
        <item name="windowMinWidthMajor">80%</item>
    </style>
</resources>